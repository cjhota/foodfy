{% extends "layout.njk" %}
{% block title %}
Foodfy - Receitas
{% endblock title %}
{% block content %}
<section class="cards conteiner">
  <h4>Mais acessadas</h4>
  {% for item in items %}
  <div class="card" id="{{ loop.index0 }}">
    <img id="receitasImg" src="{{ item.image }}" alt="imagem de {{ item.title }}" />
    <p>{{ item.title }}</p>
    <span>por {{ item.author }}</span>
  </div>
  {% endfor %}

</section>
{% endblock %}
{% block scripts %}
<script src="/scripts.js"></script>
{% endblock %}