{% extends "layoutAdmin.njk" %}
{% block content %}
<section class="conteiner">
<section class="info_header_edit">
    <h3>Receita: Tripo Bacon Burger</h3>
    <button type="submit">Editar receita</button>
</section>
    {# <img class="homeReceita" src="{{ receita.image }}" alt=""> #}
    <img class="image_details" src="/assets/burger.png" alt="">
    <div class="informations">
        <h2>{{ receita.title }}</h2>
        <span>{{ receita.author }}</span>
         <h2>Triplo bacon burger</h2>
        <span>por Jorge Relato</span>
    </div>
</section>
<section class="conteiner bodyReceita">
    <div id="titleMore">
        <h2>Ingredientes</h2>
    </div>
    <div class="info_Ingredientes details">
        <ul>
            {% for items in receita.ingredients %}
            <li>
                {{ items }}
            </li>
            {% endfor %}
        </ul>
    </div>
    <div id="titleMore">
        <h2>Modo de preparo</h2>
        <div class="details">
        <p></p>
    </div>
    </div>

    <div id="titleMore">
        <h2>Informações adicionais</h2>
    </div>
    <div class="details hide-details">
        <p>{{ receita.information }}</p>
    </div>
</section>
{% endblock %}