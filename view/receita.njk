{% extends "layout.njk" %}
{% block content %}
    <section class="contentReceita conteiner">
        <img class="homeReceita" src="https://rocketseat-cdn.s3-sa-east-1.amazonaws.com/launchbase/receitas/pizza.png" alt="">
        <div class="informations">
            <h2>{{receita.title}}</h2>
            <span>{{receita.author}}</span>
        </div>
    </section>
    <section class="conteiner bodyReceita">
        <div id="titleMore">
            <h2>Ingredientes</h2>
            <a class="btn-collapse">ESCONDER</a>
        </div>
        <div class="info_Ingredientes">
            <ul>
                {% for items in receita.ingredients %}
                <li>
                    {{items}}
                </li>
                {% endfor %}
            </ul>
        </div>
        <div id="titleMore">
            <h2>Modo de preparo</h2>
            <a class="btn-collapse">MOSTRAR</a>
        </div>
        <div id="titleMore">
            <h2>Informações adicionais</h2>
            <a class="btn-collapse">ESCONDER</a>
        </div>
            <nav class="more_info details">
                <p>{{receita.information}}</p>
            </nav>
    </section>
{% endblock %}